<h1>ログイン</h1>

<%= form_with(url: login_path, local: true) do |form| %>
  <% if flash[:alert] %>
    <p><%= flash[:alert] %></p>
  <% end %>
  <% if flash[:success] %>
    <p><%= flash[:success] %></p>
  <% end %>

  <div class="field">
    <%= form.label :email, 'メールアドレス' %>
    <%= form.text_field :email, required: true %>
  </div>

  <div class="field">
    <%= form.label :password, 'パスワード' %>
    <%= form.password_field :password, required: true %>
  </div>

  <div class="actions">
    <%= form.submit "ログイン" %>
  </div>
<% end %>
